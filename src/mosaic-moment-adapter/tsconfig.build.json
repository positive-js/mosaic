// TypeScript config file that is used to compile the moment-adapter package into ES2015.
{
    "compilerOptions": {
        // Needed for Moment.js since it doesn't have a default export.
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "stripInternal": false,
        "experimentalDecorators": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "importHelpers": true,
        "newLine": "lf",
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "../../dist/packages/mosaic-moment-adapter",
        "rootDir": ".",
        "sourceMap": true,
        "inlineSources": true,
        "target": "es2015",
        "lib": ["es2015", "dom"],
        "skipLibCheck": true,
        "types": [],
        "paths": {
            "@ptsecurity/cdk/*": ["../../dist/packages/cdk/*"]
        }
    },
    "files": [
        "public-api.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "flatModuleOutFile": "index.js",
        "flatModuleId": "@ptsecurity/mosaic-moment-adapter",
        "skipTemplateCodegen": true,
        "fullTemplateTypeCheck": true
    }
}
