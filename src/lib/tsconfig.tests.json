{
    "extends": "./tsconfig.build",
    "compilerOptions": {
        "importHelpers": false,
        "module": "commonjs",
        "target": "es5",
        "types": ["jasmine"],
        "paths": {
            "@ptsecurity/mosaic/*": ["./*"],
            "@ptsecurity/cdk/*": ["../../dist/packages/cdk/*"]
        }
    },
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true,
        "emitDecoratorMetadata": true,
        "fullTemplateTypeCheck": true
    },
    "include": [
        "**/*.spec.ts",
        "index.ts"
    ]
}
