
{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "lib": [
            "es5",
            "es2015",
            "dom"
        ],
        "baseUrl": "./src",
        "paths": {
            "@ptsecurity/cdk/*": [
                "./cdk/*"
            ],
            "@ptsecurity/mosaic/*": [
                "./lib/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "jasmine",
            "node"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "wallabyTest.ts",
        "src/**/*.spec.ts",
        "src/**/*.e2e.ts",
        "src/mosaic-examples/**/*.*"
    ],
    "angularCompilerOptions": {
        "skipMetadataEmit": true
    }
}
