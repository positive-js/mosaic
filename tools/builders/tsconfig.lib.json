{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "../../node_modules/@ptsecurity/builders",
        "resolveJsonModule": true,
        "target": "es5",
        "declaration": true,
        "downlevelIteration": true,
        "types": [
            "node"
        ]
    },
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "tsconfig.json"
    ],
    "include": [
        "**/*.ts",
        "**/*.json"
    ]
}
