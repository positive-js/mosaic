{
    "compilerOptions": {
        "outDir": "./dist/packages/all",
        "experimentalDecorators": true,
        "module": "es2015",
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "target": "es2015",
        "lib": [
            "es5",
            "es2015",
            "dom"
        ],
        "types": [
            "node",
            "jasmine"
        ]
    },
    "include": [
        "src/**/*.ts",
        "tools/**/*.ts"
    ],
    "exclude": [
        "node_modules/"
    ]
}
