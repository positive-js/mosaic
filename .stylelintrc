{
    "plugins": [
        "stylelint-scss"
    ],
    "rules": {
        "indentation": [4, {
            "message": "4 spaces must use! :P"
        }],
        "max-empty-lines": 3,
        "max-line-length": 120,
        "no-duplicate-selectors": true,
        "no-descending-specificity": true,
        "rule-empty-line-before": ["always", {
            "ignore": ["after-comment", "first-nested"]
        }],
        "selector-type-case": "lower",
        "max-nesting-depth": 4,
        "number-leading-zero": ["always", {
            "message": "zero before dot"
        }]
    },
    "ignoreFiles": [
        "packages/mosaic/design-tokens/_palette.scss",
        "packages/mosaic/design-tokens/_variables.scss",
        "packages/mosaic/design-tokens/_typography.scss",
        "packages/mosaic/design-tokens/css-tokens.css",

        "packages/docs/src/styles/default-theme/_palette.scss",
        "packages/docs/src/styles/default-theme/_variables.scss",
        "packages/docs/src/styles/default-theme/_typography.scss",
        "packages/docs/src/styles/default-theme/css-tokens.css",

        "packages/docs/src/styles/green-theme/_palette.scss",
        "packages/docs/src/styles/green-theme/_variables.scss",
        "packages/docs/src/styles/green-theme/_typography.scss",
        "packages/docs/src/styles/green-theme/css-tokens.css",

        "packages/docs/src/styles/red-theme/_palette.scss",
        "packages/docs/src/styles/red-theme/_variables.scss",
        "packages/docs/src/styles/red-theme/_typography.scss",
        "packages/docs/src/styles/red-theme/css-tokens.css",

        "packages/docs/src/styles/yellow-theme/_palette.scss",
        "packages/docs/src/styles/yellow-theme/_variables.scss",
        "packages/docs/src/styles/yellow-theme/_typography.scss",
        "packages/docs/src/styles/yellow-theme/css-tokens.css"
    ]
}
