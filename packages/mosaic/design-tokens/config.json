{
    "source": [
        "packages/mosaic/design-tokens/properties/**/*.json",
        "packages/mosaic/design-tokens/components/**/*.json"
    ],
    "platforms": {
        "scss": {
            "transformGroup": "mc/scss",
            "buildPath": "packages/mosaic/design-tokens/",
            "files": [
                {
                    "destination": "_variables.scss",
                    "format": "scss/variables",
                    "filter": "notPalette"
                },
                {
                    "destination": "_palette.scss",
                    "format": "mc-scss/palette",
                    "filter": "palette"
                }
            ]
        },
        "css": {
            "transformGroup": "mc/css",
            "buildPath": "packages/mosaic/design-tokens/",
            "files": [
                {
                    "destination": "tokens.css",
                    "format": "css/variables",
                    "filter": "notPalette",
                    "prefix": "mc"
                }
            ]
        },
        "js": {
            "transformGroup": "js",
            "buildPath": "packages/mosaic/design-tokens/",
            "files": [{
                "destination": "tokens.js",
                "format": "javascript/es6"
            }]
        }
    }
}
